<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Buttons -->

    <style name="MainBtn" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">@dimen/_120sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PrimaryBtn" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">@dimen/_135sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:background">@drawable/bg_border_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="SecondaryBtn" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:background">@drawable/bg_buttom_border_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="SecundaryBtn" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">@dimen/_135sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:background">@drawable/bg_border_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="swTheme" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color -->
        <item name="colorControlActivated">@color/gray</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white</item>

        <!-- inactive track color -->
        <item name="android:colorForeground">#212121</item>
    </style>

    <!-- Fonts -->

    <style name="RegularFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="MediumFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="SemiBoldFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/quicksand_semibold</item>
    </style>

    <style name="BoldFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

</resources>